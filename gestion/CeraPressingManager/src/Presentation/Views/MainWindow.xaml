<Window x:Class="CeraPressingManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CERA PRESSING MANAGER" Height="800" Width="1300"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="GESTION DES CLIENTS" FontSize="36" FontWeight="Bold"
                   Foreground="#6f42c1" HorizontalAlignment="Center" Margin="0,0,0,30"/>

        <TextBox Grid.Row="1" Text="{Binding Recherche, UpdateSourceTrigger=PropertyChanged}"
                 Width="400" FontSize="18" Padding="10" Margin="0,0,0,20"/>

        <DataGrid Grid.Row="2" ItemsSource="{Binding Clients}" SelectedItem="{Binding SelectedClient}"
                  AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,0,0,20">
            <Button Content="NOUVELLE COMMANDE" 
        Command="{Binding OpenCommandeWindowCommand}"
        Background="#8E2DE2" Foreground="White" 
        FontSize="20" Padding="30,20" Margin="20"/>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom" Binding="{Binding NomComplet}" Width="2*"/>
                <DataGridTextColumn Header="Indicatif" Binding="{Binding IndicatifTelephone}" Width="100"/>
                <DataGridTextColumn Header="Numéro" Binding="{Binding NumeroTelephone, FallbackValue='Non renseigné'}" Width="180"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Catégorie" Binding="{Binding Categorie}" Width="120"/>
                <DataGridTextColumn Header="Points" Binding="{Binding PointsFidelite}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,40,0">
                <TextBlock Text="Nom complet *" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding SelectedClient.NomComplet}" Width="300" Margin="0,0,0,15"/>

                <TextBlock Text="Email (optionnel)" Margin="0,0,0,5"/>
                <TextBox Text="{Binding SelectedClient.Email}" Width="300" Margin="0,0,0,15"/>

                <TextBlock Text="Téléphone (optionnel)" Margin="0,0,0,5"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox ItemsSource="{Binding Indicatifs}"
          SelectedValue="{Binding SelectedClient.IndicatifTelephone, UpdateSourceTrigger=PropertyChanged}"
          SelectedValuePath="Item1"
          DisplayMemberPath="Item2"
          Width="120"
          Margin="0,0,10,0">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="Background" Value="White"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>
                    <TextBox Grid.Column="1" Text="{Binding SelectedClient.NumeroTelephone}" Margin="10,0,0,0"/>
                </Grid>

                <TextBlock Text="Points fidélité :" FontWeight="Bold"/>
                <TextBlock Text="{Binding SelectedClient.PointsFidelite}" 
                           FontSize="20" FontWeight="Bold" Foreground="#6f42c1"/>
            </StackPanel>

            <!-- Boutons -->
            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                <Button Content="Nouveau" Command="{Binding NouveauCommand}"
                        Margin="0,0,0,10" Padding="25,12" Background="#2c3e50" Foreground="White"/>
                <Button Content="Enregistrer" Command="{Binding EnregistrerCommand}"
                        Margin="0,0,0,10" Padding="25,12" Background="#6f42c1" Foreground="White"/>
                <Button Content="Supprimer" Command="{Binding SupprimerCommand}"
                        Margin="0,0,0,10" Padding="25,12" Background="#e74c3c" Foreground="White"/>
                <Button Content="TABLEAU DE BORD" 
        Command="{Binding OpenDashboardCommand}"
        Background="#1A237E" Foreground="White" FontSize="18" Padding="25,15" Margin="20"/>
            </StackPanel>
            
        </Grid>
    </Grid>
    
</Window>