<Window x:Class="CeraPressingManager.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Tableau de bord - Cera Pressing" 
        Height="500" Width="800"
        Background="#FFF8F9FA">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="TABLEAU DE BORD" 
                   FontSize="32" FontWeight="Bold" 
                   Foreground="#2D3436" HorizontalAlignment="Center" Margin="0,0,0,30"/>

        <StackPanel Grid.Row="1">
            <Border Background="#6C5CE7" CornerRadius="12" Padding="25" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Commandes du jour" FontSize="18" Foreground="White"/>
                    <TextBlock Text="{Binding NbCommandesAujourdhui}" FontSize="48" FontWeight="Bold" Foreground="White"/>
                </StackPanel>
            </Border>

            <Border Background="#00B894" CornerRadius="12" Padding="25" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Chiffre d'affaires aujourd'hui" FontSize="18" Foreground="White"/>
                    <TextBlock Text="{Binding ChiffreAffairesAujourdhui, StringFormat='{}{0:N0} FCFA'}" 
                       FontSize="48" FontWeight="Bold" Foreground="White"/>
                </StackPanel>
            </Border>

            <Border Background="#FD79A8" CornerRadius="12" Padding="25">
                <StackPanel>
                    <TextBlock Text="Clients VIP" FontSize="18" Foreground="White"/>
                    <TextBlock Text="{Binding NbClientsVIP}" FontSize="48" FontWeight="Bold" Foreground="White"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>